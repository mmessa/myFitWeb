<div class="container">
  <p id="notice"><%= notice %></p>
  <h1 id="update_header">Listing Your Updates</h1>
  <p>
    <% if @updates.empty? %>
        <small>You have not logged an update</small>
    <% else %>
      <table class="table">
        <thead>
          <tr>
            <th>Date Added</th>
            <th>Weight</th>
            <th>Notes</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @updates.each do |update| %>
            <tr>
                <td><%= update.created_at %></td>
                <td><%= update.weight %></td>
                <td><%= update.notes %></td>
                <td><%= link_to 'Add Picture', update %></td>
                <td><%= link_to 'Edit', edit_update_path(update) %></td>
                <td><%= link_to 'Delete', update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </p>

  <%= link_to 'New Update', new_profile_update_path(@profile) %>
  <br><br>
  <hr>
  <h1 id="workout_header"> Listing Your Workouts </h1>
    <p>
      <% if @workouts.empty? %>
        <small>You have not created a workout</small>
      <% else %>
        <%= render :partial => 'workouts/workouts', :locals => { :workouts => @workouts } %>
      <% end %>
    </p>
  <%= link_to 'New Workout', new_profile_workout_path(@profile) %>
</div>
